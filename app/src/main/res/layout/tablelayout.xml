<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:stretchColumns="1"
    android:shrinkColumns="2">

    <TableRow android:background="#3F51B5">
        <TextView android:layout_column="0"
            android:padding="5dp"
            android:text="Articulo"
            android:textColor="@color/white"/>
        <TextView android:layout_column="2"
            android:padding="5dp"
            android:text="Precio"
            android:textColor="@color/white"/>
    </TableRow>

    <TableRow>
        <TextView android:layout_column="0"
            android:padding="5dp"
            android:text="2Kg de naranjas"/>
        <TextView android:layout_column="2"
            android:padding="5dp"
            android:text="$1.50"
            android:textAlignment="textEnd"/>
    </TableRow>

    <TableRow>
        <TextView android:layout_column="0"
            android:padding="5dp"
            android:text="3 tortillas de papatas"/>
        <TextView android:layout_column="2"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:text="$5.50"/>
    </TableRow>

    <TableRow>
        <TextView android:layout_column="0"
            android:padding="5dp"
            android:text="5 sushi"/>
        <TextView android:layout_column="2"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:text="$9.50"/>
    </TableRow>
    <View android:layout_height="2dp" android:background="#acaccc"/>

    <TableRow>
        <TextView android:layout_column="1"
            android:padding="5dp"
            android:text="Subtotal"
            android:textColor="#3F51B5"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:text="$24.6"/>
    </TableRow>

    <TableRow>
        <TextView android:layout_column="1"
            android:padding="5dp"
            android:text="Cupo de descuento 15%"
            android:textColor="#3F51B5"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:text="-3.91"/>
    </TableRow>

    <TableRow>
        <TextView android:layout_column="1"
            android:padding="5dp"
            android:text="Coato de envio"
            android:textColor="#3F51B5"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:text="$3.91"/>
    </TableRow>

    <TableRow android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:padding="5dp"
            android:text="Total"
            android:background="#3F51B5"
            android:textColor="@color/white"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:text="$25.13"
            android:background="#3F51B5"
            android:textColor="@color/white"/>
    </TableRow>

</TableLayout>